<%
  issue = @issue || nil
%>

<%# enable the mentions tribute dropdown again %>
<% if issue.present? && RedmineMentions.setting?(:notify_mentions_separately) %>
    <%= update_data_sources_for_auto_complete({
      users: watchers_autocomplete_for_mention_path(
        project_id: issue.project,
        q: '',
        object_type: 'issue',
        object_id: issue.id
      )
    }) %>
<% end %>
